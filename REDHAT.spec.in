%define _topdir	 	%(echo $PWD)/rpm
%define name		@PACKAGE_NAME@
%define release		1
%define version 	@PACKAGE_VERSION@
%define buildroot %{_topdir}/%{name}-%{version}-root

BuildRoot:	 	%{buildroot}
Summary: 		Efficient inotify daemon
License: 		BSD/MIT
Name: 			%{name}
Version: 		%{version}
Release: 		1%{?dist}
Source: 		%{name}-%{version}.tar.gz
Group: 			Linux/Utilities

Requires:               json-c
Requires:               zeromq
Requires:               glib2
BuildRequires:          json-c-devel
BuildRequires:          zeromq-devel
BuildRequires:          glib2-devel
BuildRequires:          perl-Test-Most
BuildRequires:          perl-Net-Inotispy

%description
Inotispy is an efficient, network-based inotify daemon.

Comments and questions should be sent to <james@jamesconerly.com>.

%prep
%setup -q

%build
if [ ! -f configure ]; then
    ./autogen.sh
fi

./configure 
make

%install
rm -rf $RPM_BUILD_ROOT
make prefix=$RPM_BUILD_ROOT install 

if [ ! -d "$RPM_BUILD_ROOT/usr" ]; then
    mkdir $RPM_BUILD_ROOT/usr
fi
if [ -d "$RPM_BUILD_ROOT/man" ]; then
    mv $RPM_BUILD_ROOT/man $RPM_BUILD_ROOT/share/
fi
mv $RPM_BUILD_ROOT/share $RPM_BUILD_ROOT/usr/

# Init script
mv $RPM_BUILD_ROOT/etc/init.d/inotispy.sysv $RPM_BUILD_ROOT/etc/init.d/inotispy

%clean
rm -rf $RPM_BUILD_ROOT

%files
%defattr(-,root,root)
/bin
/sbin
/usr

%config %dir %attr(-,root,root) /etc/inotispy.conf
%config %dir %attr(-,root,root) /etc/init.d/inotispy
